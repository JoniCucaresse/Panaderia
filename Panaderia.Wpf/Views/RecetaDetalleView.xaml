<Window x:Class="Panaderia.Wpf.Views.RecetaDetalleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Receta"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="{Binding Nombre}"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Info del producto -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Información del Producto" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBlock>
                    <Run Text="Rinde: "/>
                    <Run Text="{Binding Rinde}" FontWeight="Bold"/>
                    <Run Text=" unidades"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Costos" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBlock>
                    <Run Text="Total: "/>
                    <Run Text="{Binding CostoTotal, StringFormat=\$ {0:N2}}" 
                         FontWeight="Bold"
                         Foreground="DarkGreen"/>
                </TextBlock>
                <TextBlock>
                    <Run Text="Unitario: "/>
                    <Run Text="{Binding CostoUnitario, StringFormat=\$ {0:N2}}" 
                         FontWeight="Bold"
                         Foreground="DarkBlue"/>
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Lista de ingredientes -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Recetas}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Ingrediente" 
                                    Binding="{Binding MateriaPrimaNombre}" 
                                    Width="*"/>
                <DataGridTextColumn Header="Cantidad" 
                                    Binding="{Binding Cantidad, StringFormat={}{0:N2}}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Unidad" 
                                    Binding="{Binding UnidadMedida}" 
                                    Width="100"/>
                <DataGridTextColumn Header="Costo"
                                    Binding="{Binding CostoLinea, StringFormat=\$ {0:N2}}"
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Precio sugerido -->
        <Border Grid.Row="3"
                Background="LightYellow"
                BorderBrush="Gold"
                BorderThickness="1"
                Padding="10"
                Margin="0,15,0,0"
                Visibility="{Binding PrecioSugerido, Converter={StaticResource NullToVisibilityConverter}}">
            <StackPanel>
                <TextBlock Text="Precio Sugerido" FontWeight="Bold"/>
                <TextBlock FontSize="18" Foreground="DarkGoldenrod">
                    <Run Text="$"/>
                    <Run Text="{Binding PrecioSugerido, StringFormat={}{0:N2}}" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Botón cerrar -->
        <Button Grid.Row="4"
                Content="Cerrar"
                Width="90"
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Click="Cerrar_Click"/>
    </Grid>
</Window>
