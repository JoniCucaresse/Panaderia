<Window x:Class="Panaderia.Wpf.Views.MateriasPrimasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panaderia.Wpf.Views"
        mc:Ignorable="d"
        Title="Materias Primas" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Materias Primas"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- Tabla -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding MateriasPrimas}"
                  SelectedItem="{Binding MateriaPrimaSeleccionada}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Unidad" Binding="{Binding UnidadMedida}" Width="150"/>
                <DataGridTextColumn Header="Costo"
                                    Binding="{Binding CostoPorUnidad, StringFormat=\$ {0:N2}}"
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="Agregar" Width="90" Margin="5"
                    Command="{Binding AgregarCommand}"/>
            <Button Content="Editar" Width="90" Margin="5"
                    Command="{Binding EditarCommand}"/>
            <Button Content="Eliminar" Width="90" Margin="5"
                    Command="{Binding EliminarCommand}"/>
        </StackPanel>
    </Grid>
</Window>
