<Window x:Class="Panaderia.Wpf.Views.ProductoFormView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producto"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Información básica -->
        <GroupBox Grid.Row="0" Header="Información General" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre"/>
                <TextBox Grid.Row="1" Grid.Column="0"
                         Margin="0,5,5,10"
                         Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Text="Rinde (unidades)"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Margin="5,5,0,10"
                         Text="{Binding Rinde, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Precio Sugerido (opcional)"/>
                <TextBox Grid.Row="3" Grid.Column="0"
                         Margin="0,5,5,0"
                         Text="{Binding PrecioSugerido, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </GroupBox>

        <!-- Receta -->
        <GroupBox Grid.Row="1" Header="Receta" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <Button Content="+ Agregar Ingrediente"
                        Width="150"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,10"
                        Command="{Binding AgregarRecetaCommand}"/>
            </StackPanel>
        </GroupBox>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Recetas}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Materia Prima" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding MateriaPrimaNombre}" 
                                       VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.MateriasPrimasDisponibles, 
                                                     RelativeSource={RelativeSource AncestorType=Window}}"
                                      SelectedValue="{Binding MateriaPrimaId}"
                                      DisplayMemberPath="Nombre"
                                      SelectedValuePath="Id"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Unidad" 
                                    Binding="{Binding UnidadMedida}" 
                                    Width="100"
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Cantidad" 
                                    Binding="{Binding Cantidad}" 
                                    Width="100"/>

                <DataGridTextColumn Header="Costo/Unidad"
                                    Binding="{Binding CostoPorUnidad, StringFormat=\$ {0:N2}}"
                                    Width="110"
                                    IsReadOnly="True"/>

                <DataGridTextColumn Header="Subtotal"
                                    Binding="{Binding CostoLinea, StringFormat=\$ {0:N2}}"
                                    Width="110"
                                    IsReadOnly="True"/>

                <DataGridTemplateColumn Header="" Width="50">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✕"
                                    FontWeight="Bold"
                                    Command="{Binding DataContext.EliminarRecetaCommand, 
                                             RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Resumen de costos -->
        <GroupBox Grid.Row="3" Header="Resumen" Padding="10" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Costo Total: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CostoTotal, StringFormat=\$ {0:N2}}" 
                               FontWeight="Bold"
                               Foreground="DarkGreen"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Costo Unitario: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding CostoUnitario, StringFormat=\$ {0:N2}}" 
                               FontWeight="Bold"
                               Foreground="DarkBlue"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Botones -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Guardar"
                    Width="90"
                    Margin="5"
                    Command="{Binding GuardarCommand}"
                    IsDefault="True"/>
            <Button Content="Cancelar"
                    Width="90"
                    Margin="5"
                    Command="{Binding CancelarCommand}"/>
        </StackPanel>
    </Grid>
</Window>